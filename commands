

kubectl get pods -n outfit-app

minikube service marionette-control-plane -n outfit-app
minikube service ui-service -n outfit-app

kubectl logs deployments/image-processor-service -n outfit-app
kubectl logs deployments/marionette-control-plane -n outfit-app
kubectl logs deployments/imagestore-service -n outfit-app
kubectl logs deployments/ui-service -n outfit-app

kubectl port-forward deployment/your-microservice 8080:8080 -n outfit-app
kubectl port-forward svc/your-microservice 8080:8080 -n outfit-app



# To redeploy prometheus
kubectl create namespace monitoring
# Install the kube-prometheus stack
helm install prometheus prometheus-community/kube-prometheus-stack \
  --namespace monitoring \
  --set prometheus.prometheusSpec.resources.requests.memory=512Mi \
  --set prometheus.prometheusSpec.resources.requests.cpu=250m

# TO RESTART PROMETHEUS
kubectl get pods -n <namespace>
helm list --all-namespaces
helm upgrade
kubectl port-forward -n <namespace> svc/prometheus-server 9090:80


# DIAGNOSE CRASH (SERVICE NOT DEPLOYED IN KUBERNETES)
simply use logs from that pod or service.

# Clean up build cache in minikube
docker builder prune -a
